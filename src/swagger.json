  "paths": {
    "/user": {
      "post": {
        "description": "Registers a user.",
        "deprecated": false,
        "tags": [],

        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegisterRequest"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "André",
                    "email": "mail@mail.com",
                    "password": "1234",
                    "isAdm": true
                  }
                },
                "userWithErrors": {
                  "value": {
                    "email": "mailmail.com",
                    "password": 1234,
                    "isAdm": "true"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/UserRegisterErrorResponse"
                },
                "examples": {
                  "user": {
                    "value": {
                      "message": {
                        "ValidationError": [
                          "'name' is a required field!",
                          "Invalid email. Correct format example: 'email@email.com'",
                          "'password' must be typeof string!",
                          "'isAdm' must be typeof boolean!"
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/UserRegisterResponse"
                },
                "examples": {
                  "user": {
                    "value": {
                      "name": "André",
                      "email": "mail@mail.com",
                      "isAdm": true,
                      "id": "996a4147-beb7-4263-9cd3-84edcca4e135",
                      "createdOn": "2022-02-28T04:07:15.794Z"
                    }
                  }
                }
              }
            }
          }
        }
      },
